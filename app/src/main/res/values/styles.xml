<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/DayBackground</item>
        <item name="colorPrimaryDark">#FFA0A0A0</item>
        <item name="colorAccent">@color/DayColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#cccccc</item>
        <item name="android:inAnimation">@anim/enter_anim</item>
        <item name="android:popupTheme" tools:targetApi="lollipop">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkBackground</item>
        <item name="colorPrimaryDark">#262626</item>
        <item name="colorAccent">#1f89de</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#000000</item>
    </style>




    <style name="settingTheme" parent="@android:style/Theme.Material.Light" tools:targetApi="lollipop">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#FFA0A0A0</item>
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#cccccc</item>
    </style>

    <style name="DarkThemeSettingTheme" parent="@android:style/Theme.Material" tools:targetApi="lollipop">
        <item name="android:statusBarColor">#262626</item>
        <item name="colorPrimary">@color/DarkBackground</item>
        <item name="colorPrimaryDark">#262626</item>
        <item name="colorAccent">@color/DarkColor</item>
    </style>





    <style name="aboutTheme" parent="Theme.Mal.Light.LightActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#FFA0A0A0</item>
        <item name="colorAccent">@color/accent_material_light</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#cccccc</item>
    </style>
    <style name="DarkTheme.aboutTheme" parent="Theme.Mal.Dark.DarkActionBar">
        <item name="colorPrimary">@color/DarkBackground</item>
        <item name="colorPrimaryDark">#262626</item>
        <item name="colorAccent">@color/DarkColor</item>
    </style>



    <style name="SplashTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#434343</item>
        <item name="android:background">#434343</item>
        <item name="colorPrimary">#434343</item>
        <item name="colorPrimaryDark">#434343</item>
    </style>

    <style name="DayTheme.tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/DayColor</item>
        <item name="tabSelectedTextColor">@color/DayColor</item>
    </style>
    <style name="DarkTheme.tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/DarkColor</item>
        <item name="tabSelectedTextColor">@color/DarkColor</item>
    </style>
</resources>
